#!/bin/bash

rm /challenge/.init
find -L /challenge -type f -exec chmod 0444 {} +

mkdir -p /challenge/bin
ln -sf /usr/lib/nagios/plugins/check_by_ssh /challenge/bin/check_by_ssh
ln -sf /usr/bin/sudo /challenge/bin/sudo

cat > /etc/sudoers.d/hacker <<'EOF'
hacker ALL=(root) NOPASSWD: /usr/lib/nagios/plugins/check_by_ssh
EOF

chmod 440 /etc/sudoers.d/hacker

chmod u+s /usr/bin/sudo
