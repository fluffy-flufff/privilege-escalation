#!/bin/bash

rm /challenge/.init
find -L /challenge -type f -exec chmod 0444 {} +

mkdir -p /challenge/bin
ln -sf /usr/bin/gcore /challenge/bin/gcore
ln -sf /usr/bin/sudo /challenge/bin/sudo

if [ "$(head -n 1 /run/dojo/sys/workspace/privileged)" = "0" ]; then
    cat > /etc/sudoers.d/hacker <<-'EOF'
	hacker ALL=(root) NOPASSWD: /usr/bin/gcore
	EOF

    chmod 440 /etc/sudoers.d/hacker
else
    passwd -d root
fi

passwd -d hacker

env -i FLAG="$(tr -d '\n' < /flag)" /usr/bin/sleep infinity &
echo $! > /challenge/pid
chmod 0444 /challenge/pid
